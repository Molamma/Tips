2) Rot13
  a)encode
  #echo "THE QUICK BROWN FOX JUMPS OVER THE LAZY DOG" | tr '[A-Z]' '[N-ZA-M]'
  b)decode
  #echo "GUR DHVPX OEBJA SBK WHZCF BIRE GUR YNML QBT" | tr '[N-ZA-M]' '[A-Z]'
  # Case-sensitive version of ROT13
  tr '[A-Za-z]' '[N-ZA-Mn-za-m]'


3) Caesar cipher 
  a)encoding
